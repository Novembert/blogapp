<h2>All articles</h2>
<ul id="articles">
    <% @articles.each do |article|%>
        <li>
            <h3><%= link_to article.title, article_path(article)%></h3>
            <p><%= article.body[0,50] + '...' %></p>
            <p class="tags"> Tags: 
            <% article.tags.each do |tag|%>
                <%=link_to tag.name, tag_path(tag)%>, 

            <%end%>
            </p>
            <hr>
        </li>    
    <% end %>
</ul>

