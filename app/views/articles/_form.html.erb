<%= form_for(@article) do |f|%>
    <ul>
        <% @article.errors.full_messages.each do |error|%>
            <li><%=error%></li>
        <%end%>
    </ul>
    <p>
        <%= f.label :title%>
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :body%>
        <%= f.text_area(:body, size: '30x10')%>
    </p>
    <p>
        <%= f.label :tag_list%><br>
        <%= f.text_field :tag_list%>
    </p>
    <p>
        <%=f.submit%>
    </p>
<%end%>